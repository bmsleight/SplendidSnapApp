#:import Window kivy.core.window.Window

MyScreenManager:
    IntroScreen:
    CardsScreen:
    NotifyScreen:
    ResultsScreen:
    HighScoresScreen:

<MenuButton@Button>:
    background_normal: ''
    background_color: (1, 0.61, 0, 1) if self.state == 'normal' else (0.19, 0.39, 0.78, 1) 
    color: (0.19, 0.39, 0.78, 1)
    font_size: dp(25)
    
<IntroScreen>:
    name: 'intro'
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle: 
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'assets/logo.png'
            allow_stretch: True
            keep_ratio: True
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                MenuButton:
                    text: 'Start Solo Game'
                    on_release: app.root.current = 'cards'
            BoxLayout:
                MenuButton:
                    text: 'Start Multi Player Game (Not yet implemented)'
            BoxLayout:
                MenuButton:
                    text: 'High Scores'
                    on_release: app.root.current = 'high'
            BoxLayout:
                MenuButton:
                    text: 'Setting'
                    on_release: app.open_settings()
            BoxLayout:
                MenuButton:
                    text: 'Quit'
                    on_release: app.stop()
            BoxLayout:
    
<CardsScreen>:
    name: 'cards'
    id: cards
    on_pre_enter: root.populateCards()
    on_enter:     root.clockStart()
    on_pre_leave: root.clockStop()
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: root.manager.orange
                Rectangle:
                    size: self.size
                    pos: self.pos            
            SnapRelativeLayout:
                id: SnapFloatLayoutLeft
        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: root.manager.blue
                Rectangle:
                    size: self.size
                    pos: self.pos           
            SnapRelativeLayout:
                id: SnapFloatLayoutRight
    ClockRect:
        id: clock

<NotifyScreen>:
    name: 'notify'
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: root.manager.blue
            Rectangle:
                size: self.size
                pos: self.pos    
        Label:
            font_size: dp(25)
            color: (1, 0.61, 0, 1)
            text: root.labelText
            on_touch_down: app.root.current = 'high'
        MenuButton:
            text: 'Game Completed !'
            font_size: dp(25)
            on_release: app.root.current = 'high'

<ResultsScreen>:
    name: 'results' 
    BoxLayout:
        canvas:
            Color:
                rgba: root.manager.blue
            Rectangle:
                size: self.size
                pos: self.pos            
        MenuButton:
            font_size: dp(25)
            text: root.labelText
            on_release: root.manager.current = 'cards'

<HighScoresScreen>:
    name: 'high'
    on_pre_enter: root.populateHS()
    on_pre_leave: root.clearHS()

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: root.manager.blue
            Rectangle:
                size: self.size
                pos: self.pos    
        Label:
            size_hint: (1, 0.1)
            font_size: dp(25)
            color: (1, 0.61, 0, 1)
            text: "High Scores"
            on_touch_down: app.root.current = 'intro'
        MenuButton:
            text: root.labelText
            sfont_size: dp(25)
            on_release: app.root.current = 'intro'
