#:import Window kivy.core.window.Window

MyScreenManager:
    IntroScreen:
    CardsScreen:
    MultiMenuScreen:
    StartMultiPlayerGameScreen:
    JoinMultiPlayerGameScreen:
    NotifyScreen:
    ResultsScreen:
    HighScoresScreen:
    HelpScreen:

<MenuButton@Button>:
    background_normal: ''
    background_color: (1, 0.61, 0, 1) if self.state == 'normal' else (0.19, 0.39, 0.78, 1) 
    color: (0.19, 0.39, 0.78, 1)
    font_size: dp(25)
    
<IntroScreen>:
    name: 'intro'
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle: 
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'assets/logo.png'
            allow_stretch: True
            keep_ratio: True
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                MenuButton:
                    text: 'Start Quick Game'
                    on_release: app.root.current = 'cards'
            BoxLayout:
                MenuButton:
                    text: 'Multi-player Menu'
                    on_release: app.root.current = 'multimenu'
            BoxLayout:
                MenuButton:
                    text: 'High Scores'
                    on_release: app.root.current = 'high'
            BoxLayout:
                MenuButton:
                    text: 'Help'
                    on_release: app.root.current = 'help'
            BoxLayout:
                MenuButton:
                    text: 'Settings'
                    on_release: app.open_settings()
            BoxLayout:
                MenuButton:
                    text: 'Quit'
                    on_release: app.stop()
            BoxLayout:


<MultiMenuScreen>:
    name: 'multimenu'
    id: 'multimenu'
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle: 
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'assets/logo.png'
            allow_stretch: True
            keep_ratio: True
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                MenuButton:
                    text: 'Start a new mutli-player game'
                    on_release: app.root.current = 'smpgame'
            BoxLayout:
                MenuButton:
                    text: 'Join a mutli-player game using game code'
                    on_release: app.root.current = 'jmpgame'
            BoxLayout:
                MenuButton:
                    text: 'Return to Main Menu'
                    on_release: app.root.current = 'intro'
            BoxLayout:


<CardsScreen>:
    name: 'cards'
    id: cards
    on_pre_enter: root.populateCards()
    on_enter:     root.clockStart()
    on_pre_leave: root.clockStop()
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: root.manager.orange
                Rectangle:
                    size: self.size
                    pos: self.pos            
            SnapRelativeLayout:
                id: SnapFloatLayoutLeft
        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: root.manager.blue
                Rectangle:
                    size: self.size
                    pos: self.pos           
            SnapRelativeLayout:
                id: SnapFloatLayoutRight
    ClockRect:
        id: clock

<NotifyScreen>:
    name: 'notify'
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: root.manager.blue
            Rectangle:
                size: self.size
                pos: self.pos    
        Label:
            font_size: dp(25)
            color: root.manager.orange
            text: root.labelText
            on_touch_down: app.root.current = 'high'
        MenuButton:
            text: 'Game Completed !'
            font_size: dp(25)
            on_release: app.root.current = 'high'

<ResultsScreen>:
    name: 'results' 
    BoxLayout:
        canvas:
            Color:
                rgba: root.manager.blue
            Rectangle:
                size: self.size
                pos: self.pos            
        MenuButton:
            font_size: dp(25)
            text: root.labelText
            on_release: root.manager.current = 'cards'

<HighScoresScreen>:
    name: 'high'
    on_pre_enter: root.populateHS()
    on_pre_leave: root.clearHS()

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: root.manager.blue
            Rectangle:
                size: self.size
                pos: self.pos    
        Label:
            size_hint: (1, 0.1)
            font_size: dp(25)
            color: (1, 0.61, 0, 1)
            text: "High Scores"
            on_touch_down: app.root.current = 'intro'
        MenuButton:
            text: root.labelText
            font_size: dp(25)
            on_release: app.root.current = 'intro'

<HelpScreen>:
    name: 'help'
    on_pre_enter: root.populate()
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.1)
            canvas:
                Color:
                    rgba: root.manager.orange
                Rectangle:
                    size: self.size
                    pos: self.pos            
            MenuButton:
                text: 'Help'
                font_size: dp(25)
                on_release: app.root.current = 'intro'
        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: root.manager.blue
                Rectangle:
                    size: self.size
                    pos: self.pos           
            BoxLayout:
                ScrollView:
                    bar_width: 25
                    bar_margin: 2
                    bar_color: root.manager.orange
                    bar_inactive_color: root.manager.orange
                    Label:
                        markup: True
                        font_size: dp(25)
                        text_size: self.width, None
                        color: root.manager.orange
                        text: root.labelText
                        halign: 'left'
                        valign: 'top'            
                        padding: (30,30)
                        size_hint_y: None
                        height: self.texture_size[1]
            BoxLayout:
                orientation: 'horizontal'
                padding: (10,10)
                canvas:
                    Color:
                        rgba: root.manager.orange
                    Rectangle:
                        size: self.size
                        pos: self.pos            
                BoxLayout:
                    orientation: 'horizontal'
                    padding: (10,10)
                    canvas:
                        Color:
                            rgba: root.manager.blue
                        Rectangle:
                            size: self.size
                            pos: self.pos            
    
                    Image:
                        source: 'assets/help/before.jpg'
                        allow_stretch: True
                        keep_ratio: True
                    Image:
                        source: 'assets/help/after.png'
                        allow_stretch: True
                        keep_ratio: True
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.1)
            canvas:
                Color:
                    rgba: root.manager.orange
                Rectangle:
                    size: self.size
                    pos: self.pos            
            MenuButton:
                text: 'Return to Menu'
                font_size: dp(25)
                on_release: app.root.current = 'intro'


<StartMultiPlayerGameScreen>:
    name: 'smpgame'
    on_enter: root.on_enter()
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.1)
            canvas:
                Color:
                    rgba: root.manager.orange
                Rectangle:
                    size: self.size
                    pos: self.pos            
            MenuButton:
                text: 'Set-up multi-player game'
                font_size: dp(25)
#                on_release: app.root.current = 'intro'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.8)
            canvas:
                Color:
                    rgba: root.manager.blue
                Rectangle:
                    size: self.size
                    pos: self.pos           
            BoxLayout:
                ScrollView:
                    bar_width: 25
                    bar_margin: 2
                    bar_color: root.manager.orange
                    bar_inactive_color: root.manager.orange
                    Label:
                        markup: True
                        font_size: dp(25)
                        text_size: self.width, None
                        color: root.manager.orange
                        text: root.server_messages
                        halign: 'left'
                        valign: 'top'            
                        padding: (30,30)
                        size_hint_y: None
                        height: self.texture_size[1]
            BoxLayout:
                size_hint: (1, 0.25)
                orientation: 'horizontal'
                padding: (10,10)
                canvas:
                    Color:
                        rgba: root.manager.orange
                    Rectangle:
                        size: self.size
                        pos: self.pos            
                BoxLayout:
                    orientation: 'horizontal'
                    padding: (10,10)
                    canvas:
                        Color:
                            rgba: root.manager.blue
                        Rectangle:
                            size: self.size
                            pos: self.pos            
                    Label:
                        markup: True
                        font_size: dp(25)
                        color: root.manager.orange
                        text: root.game_key_label
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.1)
            canvas:
                Color:
                    rgba: root.manager.orange
                Rectangle:
                    size: self.size
                    pos: self.pos            
            MenuButton:
                id: nextbutton
                text: root.button_txt
                font_size: dp(25)
                disabled: True


<JoinMultiPlayerGameScreen>:
    name: 'jmpgame'
    game_key_text: txt.text
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: root.manager.blue
            Rectangle:
                size: self.size
                pos: self.pos    
        Label:
            size_hint: (1, 0.45)
            font_size: dp(25)
            color: root.manager.orange
            text: "Join Multi-player game"
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)
            BoxLayout:
            Label:
                font_size: dp(25)
                color: root.manager.orange
                text: "Game Key :"
            TextInput:
                id: txt
                input_type: 'number'
                input_filter: 'int'
                font_size: dp(25)
                text: root.game_key_text
                hint_text: '654321'
                multiline: False
                padding: (10,10)

            Button:
                text: 'Join'
                font_size: dp(25)
                on_press: root.joinGameKey()

            BoxLayout:
        BoxLayout:
            size_hint: (1, 0.45)
    
